{
  "name": "mendeleev.css",
  "version": "0.0.2",
  "description": "Atomic CSS framework.",
  "homepage": "https://fabiommendes.github.io/mendeleev.css/",
  "repository": "https://github.com/fabiommendes/mendeleev.css/",
  "license": "MIT",
  "author": "FÃ¡bio Mendes <fabiomacedomendes@gmail.com>",
  "main": "dist/mendeleev.css",
  "keywords": [
    "bootstrap",
    "css",
    "css3",
    "flexbox",
    "front-end",
    "framework",
    "grid",
    "html",
    "html5",
    "kickstarter",
    "responsive",
    "mobile",
    "mobile-first",
    "responsive",
    "sass",
    "scss"
  ],
  "ignore": [
    ".appveyor.yml",
    ".editorconfig",
    ".eslintrc",
    ".github",
    ".gitignore",
    ".sasslintrc",
    ".travis.yml",
    "backstop.conf.js",
    "bower.json",
    "changelog.md",
    "composer.json",
    "package.js",
    "package.json",
    "src",
    "test"
  ],
  "optionalDependencies": {
    "mithril": "^1.1.6"
  },
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "ava": "^1.4.1",
    "backstopjs": "^3.8.8",
    "banner-cli": "^0.11.1",
    "browser-sync": "^2.26.3",
    "editorconfig-tools": "^0.1.1",
    "husky": "^1.3.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "onchange": "^5.2.0",
    "postcss-cli": "^6.1.2",
    "sass-lint": "^1.12.1",
    "sassdoc": "^2.6.0",
    "sassdoc-theme-flippant": "^0.1.0"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "ava": "nyc ava",
    "autoprefixer": "postcss -u autoprefixer --no-map.inline --autoprefixer.browsers \"last 1 versions\" -r dist/*.css",
    "backstop": "run-s build && run-p serve compare",
    "banner": "banner-cli 'dist/*.css'",
    "build": "run-s clean sass autoprefixer banner",
    "clean": "rm -rf dist/*",
    "compare": "backstop test --configPath=backstop.conf.js",
    "docs": "run-p docs:sassdoc docs:app",
    "docs:sassdoc": "sassdoc -t flippant src && mv sassdoc docs/sassdoc",
    "docs:app": "echo 'building app... (TODO)'",
    "dump": "sassc src/mendeleev.scss",
    "fn:update": "rm -rf src/fn.sass && cp -rv ../fn.sass/src/ src/fn.sass",
    "lint": "sass-lint -c .sasslintrc src --verbose --no-exit",
    "precommit_": "run-p test",
    "reference": "backstop reference --configPath=backstop.conf.js",
    "release": "run-s fn:update docs",
    "sass": "sassc -t expanded src/mendeleev.scss dist/mendeleev.css && sassc -t compressed src/mendeleev.scss dist/mendeleev.min.css",
    "serve": "browser-sync start --no-notify -s test --ss dist -f dist",
    "start": "run-p build watch serve",
    "test": "run-s build lint ava",
    "watch:build": "onchange src -- run-p build",
    "watch:serve": "python3 -m http.server --directory dist/",
    "watch": "run-p watch:build watch:serve"
  },
  "resolutions": {
    "natives": "1.1.3"
  }
}
